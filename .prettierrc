{
  "semi": true,
  "singleQuote": true,
  "trailingComma": "all",
  "tabWidth": 2,
  "printWidth": 80,
  "bracketSpacing": true,
  "arrowParens": "always",
  "endOfLine": "lf",
  "jsxSingleQuote": false,
  "useTabs": false,
  "bracketSameLine": false,
  "singleAttributePerLine": true,
  "proseWrap": "always",
  "htmlWhitespaceSensitivity": "strict",
  "embeddedLanguageFormatting": "auto",
  "quoteProps": "consistent",
  "plugins": [
    "@trivago/prettier-plugin-sort-imports",
    "prettier-plugin-tailwindcss"
  ],
  "importOrder": [
    "^react$",
    "^react-dom$",
    "^next$",
    "^next/(.*)$",
    "<THIRD_PARTY_MODULES>",
    "^@/types/(.*)$",
    "^@/config/(.*)$",
    "^@/constants/(.*)$",
    "^@/components/(.*)$",
    "^@/lib/(.*)$",
    "^@/hooks/(.*)$",
    "^@/utils/(.*)$",
    "^@/helpers/(.*)$",
    "^@/services/(.*)$",
    "^@/store/(.*)$",
    "^@/styles/(.*)$",
    "^@/(.*)$",
    "^[../]",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "importOrderGroupNamespaceSpecifiers": true,
  "importOrderCaseInsensitive": true,
  "importOrderParserPlugins": ["typescript", "jsx", "decorators-legacy"],
  "overrides": [
    {
      "files": "*.json",
      "options": {
        "singleQuote": false,
        "printWidth": 80,
        "trailingComma": "none",
        "quoteProps": "preserve"
      }
    },
    {
      "files": "package.json",
      "options": {
        "printWidth": 80,
        "tabWidth": 2,
        "useTabs": false
      }
    },
    {
      "files": "*.md",
      "options": {
        "printWidth": 80,
        "proseWrap": "always",
        "singleQuote": false,
        "trailingComma": "none"
      }
    },
    {
      "files": ["*.yml", "*.yaml"],
      "options": {
        "singleQuote": false,
        "tabWidth": 2,
        "printWidth": 80,
        "bracketSpacing": false
      }
    },
    {
      "files": ["*.css", "*.scss", "*.less"],
      "options": {
        "singleQuote": false,
        "printWidth": 100
      }
    },
    {
      "files": "*.html",
      "options": {
        "printWidth": 100,
        "singleQuote": false,
        "htmlWhitespaceSensitivity": "strict"
      }
    },
    {
      "files": "*.tsx",
      "options": {
        "jsxSingleQuote": false,
        "singleAttributePerLine": true
      }
    },
    {
      "files": "*.test.{ts,tsx,js,jsx}",
      "options": {
        "printWidth": 120
      }
    }
  ]
}
